class Solution:
    def characterReplacement(self, s: str, k: int) -> int:
        l = 0 
        longest = 0
        counts = [0] * 26

        for r in range(len(s)):
            counts[ord(s[r]) - 65] += 1

            while (r-l+1) - max(counts) > k:
                counts[ord(s[l]) - 65] -= 1
                l += 1

            curr_len = (r - l) + 1
            longest = max(longest, curr_len)

        return longest
