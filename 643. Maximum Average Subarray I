class Solution:
    def findMaxAverage(self, nums: List[int], k: int) -> float:
        l = 0
        r = k-1
        max_avg = float("-inf")

        while r < len(nums):
            sub_arr = nums[l:r+1]
            avg = sum(sub_arr)/float(k)
            max_avg = max(max_avg, avg)

            l += 1
            r += 1

        return max_avg
        
