class Solution:
    def longestOnes(self, nums: List[int], k: int) -> int:
        max_ones = 0
        zeros = 0
        l = 0
        
        for r in range(len(nums)):
            if nums[r] == 0:
                zeros += 1

            while zeros > k:
                if nums[l] == 0:
                    zeros -= 1
                l += 1

            ones = (r - l) + 1
            max_ones = max(max_ones, ones)
        
        return max_ones
